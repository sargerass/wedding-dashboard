:root {
	--primary: #663366;
  --secondary: #669999;
}
$fondoNegro = url("../img/fondo.jpg");
#baneInferior
	display inline-block
	width 5000px
	height 100%
	.logoImagen
		float left
		height 100%
#imagenCargando
	display block
	position absolute
	top 0
	width 100%
	height 85%
	//background #89b21d
	background $fondoNegro
	background-size: cover
	background-position: center
	.tituloBienvenida
		color #fff
		text-align center
		margin-top 10%
		font-size 50px

#contenidoBaner
	display none
	width 101%
	height 85%
	margin -.5%
	background #0f0
	position absolute
	top 0
footer
	background $fondoNegro
	height 13%
	position absolute
	bottom 0
	overflow hidden
	width 100%
#app
	position fixed
	left 0
	top 0
	width 100%
	height 100%
	background $fondoNegro
.fila
	padding-right .5%
	height 100%
	background $fondoNegro
	float left
	perspective 800px
.imagenFull
	width 50%
	text-align center
	margin 0 auto
	img
		width 100%
.fila1
	width 16.11111%
.fila2
	width 32.8888888%
.fila3
	width 49.5%
.contenedorLogo
	width 100%
	margin 0
	background no-repeat center center
	position absolute
	transition all .5s ease-in-out
	background-size: cover
.contenedorImagen
	width 100%
	margin 0
	background no-repeat center center	
	background-color rgba(255, 218, 48, 0.66)
	background-blend-mode multiply
	transition opacity .8s ease-in-out
	opacity 1
.contenedorFlip
	position relative
	transform-style preserve-3d
	transition all 1s ease-in-out
	width 100%
	.contenedorImagen,.contenedorLogo
		display block
		position absolute
		backface-visibility hidden
		color #fff
		&.back
			transform rotateY( 180deg )
	&.flipped
		transform rotateY( 180deg )
#fotosTwits
	width 100%
	margin 2% auto
#vistaTwit
	opacity 0
	transition opacity .8s ease-in-out
	background var(--primary);
	margin-bottom: 5px
.contenidoTwit
	table
		width 100%
		margin 0 auto
		td
			padding 5px
	.usuario
		width 80px
		img
			width 80px
			height 80px
			display block
			object-fit cover
	.nombreUsuario
		margin 0
		padding 0
	.contenidoMensajeUsuarios
		min-height 80px
		overflow hidden
.contenidoMensaje
	width 500px
	position absolute
	bottom 100%	
	left 50%
	margin-left -250px
	height 110px
	background #fff
	transform scale(1.5,1.5)
	transition all .5s ease-in-out
	opacity 0
	&.leer
		opacity 1
		bottom 50%
	&.leido
		transform scale(1,1)
		bottom 50px
	
	.mensaje
		float right
		width 375px
		padding 15px 15px 15px 0
		.nombreUsuario
			padding 0
			margin 0
		.contenidoMensaje
			overflow hidden
			height 70px